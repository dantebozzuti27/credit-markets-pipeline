# ============================================================================
# Credit Markets Pipeline - Environment Configuration
# ============================================================================
# Copy to .env and fill in your values
# NEVER commit .env to version control

# ─────────────────────────────────────────────────────────────────────────────
# Environment
# ─────────────────────────────────────────────────────────────────────────────
ENVIRONMENT=dev
DEBUG=false

# ─────────────────────────────────────────────────────────────────────────────
# FRED API
# Get your key at: https://fred.stlouisfed.org/docs/api/api_key.html
# ─────────────────────────────────────────────────────────────────────────────
FRED_API_KEY=your_fred_api_key_here

# ─────────────────────────────────────────────────────────────────────────────
# SEC EDGAR
# Use your email address as user agent (SEC requirement)
# ─────────────────────────────────────────────────────────────────────────────
SEC_USER_AGENT=your_email@example.com

# ─────────────────────────────────────────────────────────────────────────────
# AWS / S3
# For local development with LocalStack:
#   AWS_ENDPOINT_URL=http://localhost:4566
# For production, leave AWS_ENDPOINT_URL empty
# ─────────────────────────────────────────────────────────────────────────────
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566
S3_BUCKET=credit-markets-data

# ─────────────────────────────────────────────────────────────────────────────
# PostgreSQL
# ─────────────────────────────────────────────────────────────────────────────
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=credit_markets
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_POOL_SIZE=5

# ─────────────────────────────────────────────────────────────────────────────
# Redis (for rate limiting, caching)
# ─────────────────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ─────────────────────────────────────────────────────────────────────────────
# Observability
# ─────────────────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
LOG_FORMAT=console
ENABLE_METRICS=true
METRICS_PORT=8001

# ─────────────────────────────────────────────────────────────────────────────
# Pipeline Settings
# ─────────────────────────────────────────────────────────────────────────────
PIPELINE_MAX_RETRIES=3
PIPELINE_RETRY_DELAY_SECONDS=1.0
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
